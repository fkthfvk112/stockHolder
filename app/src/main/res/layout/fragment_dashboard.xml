            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e15"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e16"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/e17"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e18"
