<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="주식명"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/stockName"
        android:text="fdsafasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="주식명"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/stockMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#219ebc"
        app:layout_constraintTop_toBottomOf="@+id/stockName">

        <TextView
            android:textStyle="bold"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="비율"
            android:textSize="15sp" />

        <TextView
            android:textStyle="bold"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="목표매수가"
            android:textSize="12sp" />

        <TextView
            android:textStyle="bold"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="수량"
            android:textSize="15sp" />

        <TextView
            android:textStyle="bold"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="실매수가"
            android:textSize="13sp" />

        <TextView
            android:textStyle="bold"
            android:layout_width="70sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="현재상태"
            android:textSize="15sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:columnCount="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockMenu">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="6"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:background="#8ecae6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="원가"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="-10%"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="-20%"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="-30%"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="-40%"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="평단가"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/e0"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:textSize="13sp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/e1"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e2"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e3"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e4"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/e5"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e6"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e7"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e8"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/e9"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e10"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/e11"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:singleLine="true"
